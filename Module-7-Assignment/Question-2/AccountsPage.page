<apex:page Controller="ControllerForAccount">
    <head>
        <style>
            .outputTextLink
            {
            	color: #ccc;
            	text-decoration: underline;
            }
        </style>
    </head>
    <apex:form >
        <apex:pageBlock title="Accounts Search">
            <apex:pageBlockButtons >
                <apex:commandButton action="{!getAccounts}" value="Search"/>
            </apex:pageBlockButtons>
            <apex:pageBlockSection columns="1">
                <apex:inputText value="{!city}" label="Billing City"/>
                <apex:inputText value="{!state}" label="Billing State"/>
                <apex:inputText value="{!country}" label="Billing Country"/>
            </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:outputLabel rendered="{! NOT(showAccountsList)}">
            <p>
                No accounts to Display.
            </p>
        </apex:outputLabel>
        <apex:outputPanel rendered="{! showAccountsList}">
            <apex:pageBlock title="Accounts List">
                <apex:pageBlockTable value="{!accountsList}" var="acc" id="Result">
                    <apex:column value="{!acc.Name}" headerValue="{! UPPER($ObjectType.Account.Fields.Name.Label)}"/>
                    <apex:column value="{!acc.BillingCity}" headerValue="{! UPPER($ObjectType.Account.Fields.BillingCity.Label)}"/>
                    <apex:column value="{!acc.BillingState}" headerValue="{! UPPER($ObjectType.Account.Fields.BillingState.Label)}"/>
                    <apex:column value="{!acc.BillingCountry}" headerValue="{! UPPER($ObjectType.Account.Fields.BillingCountry.Label)}"/>
                </apex:pageBlockTable>
                <br />
                Page : <apex:outputText value="{! PageNumber } Of {! CEILING(ResultSize / pageSize) }"></apex:outputText>
                <br />
                <apex:panelGrid columns="4">
                    <apex:commandLink action="{!first}" value="First" />
                    <apex:commandLink action="{!previous}" value="Previous" rendered="{!setCon.HasPrevious}" />
                    <apex:outputText styleClass="outputTextLink" value="Previous" rendered="{!NOT(setCon.HasPrevious)}"/>
                    <apex:commandLink action="{!next}" value="Next" rendered="{!setCon.HasNext}" />
                    <apex:outputText styleClass="outputTextLink" value="Next" rendered="{!NOT(setCon.HasNext)}"/>
                    <apex:commandLink action="{!last}" value="Last" />
                </apex:panelGrid>
            </apex:pageBlock>
        </apex:outputPanel> 
    </apex:form>
</apex:page>