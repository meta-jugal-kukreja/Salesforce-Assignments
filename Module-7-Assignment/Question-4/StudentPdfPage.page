<apex:page Controller="StudentPdfController">
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection columns="1">
                First Name : {! student.FirstName__c} <br />
                Last Name : {! student.Name} <br />
                Class : {! student.Class__r.Name} <br />
                Age : {! student.Age__c} <br />
                DOB : {! student.DOB__c} <br />
            </apex:pageBlockSection>
        </apex:pageBlock>
        <apex:actionFunction name="savePdf" action="{! savePdf}"/>
    </apex:form>
    <script>
    	document.addEventListener('DOMContentLoaded', function(event) {
        	console.log('HIIHII');
            savePdf();    
        })
    </script>
</apex:page>